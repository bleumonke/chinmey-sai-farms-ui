{
  "compilerOptions": {
    "target": "ES2020",                  // üõ†Ô∏è Use a more modern target for React 18+/19+
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]     // üßπ Prevents unwanted TS analysis on compiled output
}
